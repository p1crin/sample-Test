# ====================================
# Database Configuration
# ====================================
# PostgreSQL接続文字列
# フォーマット: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL="postgresql://postgres:password@localhost:5432/prooflink_db"

# ====================================
# NextAuth Configuration
# ====================================
# NextAuth.jsのベースURL(本番環境では実際のドメインに変更)
NEXTAUTH_URL="http://localhost:3000"

# JWTトークン署名用のシークレットキー
# 生成方法: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# ====================================
# AWS Configuration
# ====================================
# AWSリージョン
AWS_REGION="ap-northeast-1"

# AWS認証情報(ローカル開発用)
# 本番環境ではIAMロールを使用するため不要
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# S3バケット名(本番環境のみ、ローカルではオプション)
# 設定されている場合、ファイルはS3に保存されます
# 未設定の場合、ローカルファイルシステムに保存されます
# AWS_S3_BUCKET_NAME="prooflink-prod-evidence"

# S3インポート用バケット(CSV一括インポート用)
S3_IMPORT_BUCKET="prooflink-dev-imports"

# S3エビデンスファイル用バケット(テストケース添付ファイル用)
S3_EVIDENCE_BUCKET="prooflink-dev-evidence"

# ====================================
# AWS Batch Configuration
# ====================================
# AWS Batchジョブキュー
AWS_BATCH_JOB_QUEUE="arn:aws:batch:ap-northeast-1:123456789012:job-queue/prooflink-job-queue"

# ユーザーインポート用ジョブ定義
AWS_BATCH_USER_IMPORT_JOB_DEFINITION="arn:aws:batch:ap-northeast-1:123456789012:job-definition/prooflink-user-import:1"

# ====================================
# Application Configuration
# ====================================
# Node.js環境(development, production, test)
NODE_ENV="development"

# Next.jsのポート番号
PORT="3000"

# ホスト名
HOSTNAME="0.0.0.0"

# ====================================
# Logging Configuration
# ====================================
# クライアントログをサーバーに送信する最小レベル (debug, info, warn, error)
# 本番環境では warn 以上を推奨
NEXT_PUBLIC_CLIENT_LOG_SEND_LEVEL="warn"

# クライアントログのバッチサイズ（この数に達したら即座に送信）
NEXT_PUBLIC_CLIENT_LOG_BATCH_SIZE="10"

# クライアントログのバッチ送信間隔（ミリ秒、デフォルト: 30000 = 30秒）
NEXT_PUBLIC_CLIENT_LOG_BATCH_INTERVAL="30000"

# CloudWatch Logs直接送信の有効化（本番環境のみ推奨）
# true にすると、ECSの標準出力を経由せず、直接CloudWatchに送信します
ENABLE_CLOUDWATCH_LOGS="false"

# サーバーログ用CloudWatchロググループ名
CLOUDWATCH_SERVER_LOG_GROUP="/ecs/prooflink-prod-app-server"

# クライアントログ用CloudWatchロググループ名
CLOUDWATCH_CLIENT_LOG_GROUP="/ecs/prooflink-prod-app-client"

# ====================================
# Feature Flags (オプション)
# ====================================
# S3ストレージを強制的に有効化/無効化
# FORCE_S3_STORAGE="true"

# デバッグログの有効化
# DEBUG="true"

# ====================================
# 本番環境での追加設定
# ====================================
# 本番環境では以下も設定してください:
# - DATABASE_URL: RDSのエンドポイント
# - NEXTAUTH_URL: 実際のドメイン(https://prooflink.example.com)
# - NEXTAUTH_SECRET: Secrets Managerから取得した強力なシークレット
# - AWS_S3_BUCKET_NAME: 本番用S3バケット名
# - AWS認証情報: IAMロールを使用(環境変数不要)
